<style>

    .entireAdminLoginPage:before{
            content: '';
            position: fixed;
            width: 100vw;
            height: 100vh;
            background-image: url('bitTest.webp');
            background-position: center center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            -webkit-filter: blur(2px);
            -moz-filter: blur(2px);
            -o-filter: blur(2px);
            -ms-filter: blur(2px);
            filter: blur(2px);
        }
        .adminLoginPage
        {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 400px;
            height: 500px;
            padding: 80px 40px;
            box-sizing: border-box;
            background: rgba(0,0,0,.5);
        }
        .adminAvatar {
            position: absolute;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            overflow: hidden;
            top: calc(-80px/2);
            left: calc(50% - 40px);
        }
        .adminLoginPage h2 {
            margin: 0;
            padding: 0 0 20px;
            color: #fff;
            text-align: center;
            
        }

        .adminLoginPage h4 {
            margin: 0;
            padding: 0 0 20px;
            font-style: italic;
            color: #fff;
            text-align: center;
            
        }
        
        .adminLoginPage p
        {
            margin: 0;
            padding: 0;
            font-weight: bold;
            color: #fff;
        }

        .adminLoginPage a {
            margin-left: 125px;
            color: white;
            font-weight: bold;
        }

        .adminLoginPage a:hover{
            color: #FFFF99
        }

        .adminLoginPage input
        {
            width: 100%;
            margin-bottom: 20px;
        }

        .adminLoginPage input[type="text"],
        .adminLoginPage input[type="password"]
        {
            border: none;
            border-bottom: 1px solid #fff;
            background: transparent;
            outline: none;
            height: 40px;
            color: #fff;
            font-size: 16px;
        }
        .adminLoginPage input[type="submit"] {
            height: 30px;
            color: #fff;
            font-size: 15px;
            background: green;
            cursor: pointer;
            border-radius: 25px;
            border: none;
            outline: none;
            margin-top: 15%;
        }


</style>

<div class="entireAdminLoginPage">
    <div class="adminLoginPage">
        <img src="./avatar.webp" class="adminAvatar">
        <h4>{{message}}</h4>
        <h2>Bit Test Login</h2>
        <form action="/bitTestLogin" method="POST">
            <p>Username</p>
            <input type="text" name="id" placeholder="Enter Username" required>
            <p>Password</p>
            <input type="password" name="password" placeholder="Enter Password" required>
            <input type="submit" name="" value="Sign In">
            
        </form>
    </div>
</div>