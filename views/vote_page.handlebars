
<style>
   .entireSelectCandidatePage:before{
            content: '';
            position: fixed;
            width: 100vw;
            height: 100vh;
            background-image:url('candidateSelect.webp');
            background-position: center center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            -webkit-filter: blur(1px);
            -moz-filter: blur(1px);
            -o-filter: blur(1px);
            -ms-filter: blur(1px);
            filter: blur(1px);
        }
     

        .selectCandidate{

            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 400px;
            height: 550px;
            padding: 80px 40px;
            box-sizing: border-box;
            background: rgba(0,0,0,.5);
            zoom: 80%;
        }

        .presidentialCandidate{
            left: auto;
            box-sizing: content-box;
            background:#645e3e

        }

        .senatorialCandidate{
            left: auto;
            box-sizing:content-box;
            background:#645e3e  
        }
    
        .selectCandidate h1{
            margin-top:auto;
            color: white;
            margin-left: 40px;
        }

        .selectCandidate h2{
            margin-top: 2px;
            color: white
        }

        .selectCandidate span{
            color: #ffe066
        }
        .presidentialCandidate input{
            color: white;
        }

        .presidentialCandidate h1{
            color: white;
            margin-left: 30px;
        }

        .presidentialCandidate h2{
            color: white;
            margin-left:40px;
        }

        .selectCandidate label{
            color: white;
        }

        .senatorialCandidate h2{
            color: white;
            margin-left: 50px;
        }

        .presidentialCandidate input{
            color: white;
            margin-left: 42px;
            margin-bottom: 12px;
        }

        .senatorialCandidate input{
            color: white;
            margin-left: 42px;
            margin-bottom: 12px;
        }

        .senatorialCandidate label{
            color: white;
            margin-bottom: 12px;
        }
        
        .submitBallot button{
            margin-top: 20px;
            margin-left: 90px;
