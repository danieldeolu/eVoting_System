<div class= 'entireSelectCandidatePage'>
    <div class="selectCandidate">

<h2> Hey <span>{{id}}</span>, select a candidate from each campaign</h2>

<form action="/vote" method="POST">
<div class="presidentialCandidate">
            <h2>Presidential Campaign</h2>
          <div>
            <input type="radio" id="APC" name="presidential" value="APC" required>
            <label for="APC">APC</label><br>
            <input type="radio" id="PDP" name="presidential" value="PDP">
            <label for="PDP">PDP</label><br>
            <input type="radio" id="APGA" name="presidential" value="APGA">
            <label for="APGA">APGA</label> <br>
         </div>
         <br>
   </div>
     <div class="senatorialCandidate">
            <h2>Senatorial Campaign</h2>
            <input type="radio" id="APC" name="senatorial" value="APC" required>
            <label for="APC">APC</label><br>
            <input type="radio" id="PDP" name="senatorial" value="PDP">
            <label for="PDP">PDP</label><br>
            <input type="radio" id="APGA" name="senatorial" value="APGA">
            <label for="APGA">APGA</label> <br>
           <br>
        </div>
     <div class="submitBallot">
