            cursor: pointer;
            border-radius: 25px;
            border: none;
            outline: none;
            margin-top: 10%;
            margin-left: 24%;
        }

        .confirmBallot input[type="submit"]:hover {
            background: orange;
        }
        
        .confirmBallot span{
            color: #ffe066
        }
        
        .confirmBallot button{
            height: 30px;
            color: #fff;
            font-size: 15px;
            background: orange;
            cursor: pointer;
            border-radius: 25px;
            border: none;
            outline: none;
            margin-top: 5%;
            margin-left: 23%;
        }

        .confirmVotesTable table, th, td{
        margin-left: 20px;
        margin-top: 1px;
        border: 1px solid black;
        border-collapse: collapse;
        padding-left: 20px;
        padding-right: 20px;
        padding-top: 5px;
        padding-bottom: 1px;
        text-align: center;
        color: white;
        font-weight: bold;
    }

    .confirmVotesTable td, th {
            color: black
    }

     .confirmVotesTable table tr:nth-child(even){
        background-color: orange;
    }
    
    .confirmVotesTable table tr:nth-child(odd){
        background-color: #ffd699;
    }

    #sendTestVotes{
        color: white;
        background-color: green;
    }

    #sendTestVotes:hover{
        color: white;
        background-color: orange;
    }

    #tallyTestVotes:hover {
        color: white;
        background-color: red;
    }

     marquee {
            color: orange;
            font-weight: bold;
            margin-bottom: 10px;
        }

</style>

