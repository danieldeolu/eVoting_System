<script type="text/javascript">

    let tallyTestButton = document.getElementById("tallyTestVotes")
    function enableTallyButton(e){
        
        if(tallyTestButton.style.display === "none"){
            tallyTestButton.style.display = "block";
        }
        else {
            tallyTestButton.style.display = "none";
        }
        e.preventDefault();
    }

</script>